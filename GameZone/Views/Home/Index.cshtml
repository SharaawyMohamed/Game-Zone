@using GameZone.Settings
@model IEnumerable<Game>
@{
	ViewData["Title"] = "Home Page";
}
<div class="row">
	@if (Model.Any())
	{
		@foreach (var game in Model)
		{
			<div class="col-lg-4 col-md-6 mt-5">
				<div class="card border-primary mb-3">
					<div class="card-body" style="background-image: url('@Url.Content($"{FileSettings.ImagePath}/{game.Cover}")'); background-size: cover;background-position:center;height:300px;">
						<div class="h-100">
							<span class="badge bg-dark rounded-0">@game.Categoriy?.Name</span>
						</div>
					</div>
					<div class="card-footer text-muted d-flex justify-content-between align-items-center">
						<h5>@game.Name</h5>
						<div>
							@{
								foreach(var gamedefice in game.Devices)
								{
									<i class="@gamedefice.Device?.ICone me-2 fs-4"></i>
								}
							}
						</div>
					</div>
				</div>
			</div>
		}
	}
	else
	{
		<div class="col-12">
			<div class="alert alert-dismissible alert-primary mt-5 text-center">
				<p>Currently, No Games To Display!</p>
			</div>
		</div>
	}
</div>
